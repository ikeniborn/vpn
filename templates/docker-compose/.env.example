# VPN System Docker Compose Environment Configuration
# Copy this file to .env and customize for your deployment

# Domain and Network Configuration
DOMAIN_NAME=vpn.example.com
VPN_PORT=8443
VPN_REALITY_PORT=443
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# API Configuration
API_PORT=3000
JWT_SECRET=your-super-secret-jwt-key-change-this

# Database Configuration
POSTGRES_DB=vpndb
POSTGRES_USER=vpnuser
POSTGRES_PASSWORD=secure-postgres-password-change-this

# Redis Configuration
REDIS_PASSWORD=secure-redis-password-change-this

# Monitoring Configuration
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
GRAFANA_PASSWORD=secure-grafana-password-change-this
JAEGER_UI_PORT=16686
JAEGER_COLLECTOR_PORT=14268

# Logging Configuration
LOG_LEVEL=info

# Security Configuration (Advanced)
# Uncomment and configure if needed
# SSL_CERT_PATH=/path/to/ssl/cert
# SSL_KEY_PATH=/path/to/ssl/key
# BACKUP_ENCRYPTION_KEY=backup-encryption-key-change-this

# Performance Tuning
# POSTGRES_MAX_CONNECTIONS=100
# REDIS_MAX_MEMORY=256mb
# NGINX_WORKER_PROCESSES=auto
# NGINX_WORKER_CONNECTIONS=1024

# Development Settings
# Set to "true" for development mode
# DEV_MODE=false
# DEBUG=false