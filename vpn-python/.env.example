# VPN Manager Environment Variables

# Application settings
VPN_DEBUG=false
VPN_LOG_LEVEL=INFO

# Paths (defaults are usually fine)
# VPN_INSTALL_PATH=/opt/vpn
# VPN_CONFIG_PATH=~/.config/vpn-manager
# VPN_DATA_PATH=~/.local/share/vpn-manager

# Database
# VPN_DATABASE_URL=sqlite+aiosqlite:///vpn.db

# Docker
# VPN_DOCKER_SOCKET=/var/run/docker.sock
# VPN_DOCKER_TIMEOUT=30

# Server defaults
VPN_DEFAULT_PROTOCOL=vless
VPN_DEFAULT_PORT_RANGE="10000,65000"

# Security
VPN_ENABLE_AUTH=true
# VPN_SECRET_KEY=your-secret-key-here

# Monitoring
VPN_ENABLE_METRICS=true
VPN_METRICS_PORT=9090

# Development
VPN_RELOAD=true